<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/backround_green"
    android:layout_margin="20dp"
    >

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:src="@drawable/icons_white_car" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLessonNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson X:"
                android:textColor="@color/dark_green"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@color/dark_green"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tvLessonDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textColor="@color/dark_green"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of lesson:"
            android:textColor="@color/dark_green"
            android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvEmpty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  "
                android:textColor="@color/dark_green"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/editButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btnEDIT"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/dark_green"
                android:text="Edit"
                android:textColor="@color/light_green"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="✔️"
                android:backgroundTint="@color/dark_green"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:text="❌"
                android:backgroundTint="@color/dark_green"
                android:visibility="gone"/>
    </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>